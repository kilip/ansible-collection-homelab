---
creation_rules:
  - path: .*/cluster/.*\.sops\.ya?ml
    encrypted_regex: "^(data|stringData)$"
    age: >-
      {{ homelab_age_public_key }}
  - path_regex: .*/config/.*\.sops\.ya?ml
    unencrypted_regex: "^(kind)$"
    age: >-
      {{ homelab_age_public_key }}
  - path_regex: .*/ansible/.*\.sops\.ya?ml
    unencrypted_regex: "^(kind)$"
    age: >-
      {{ homelab_age_public_key }}
  - path_regex: .*\.sops\.ya?ml
    age: >-
      {{ homelab_age_public_key }}
