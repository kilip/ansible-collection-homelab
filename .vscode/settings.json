{
  "ansible.ansibleLint.enabled": false,
  "files.associations": {
    "**/playbooks/**/*.yml": "ansible",
    "**/roles/**/tasks/**/*.yml": "ansible",
    "**/integration/**/*.yml": "ansible",
    "**/molecule/**/converge.yml": "ansible",
    "**/molecule/**/verify.yml": "ansible",
    "**/molecule/**/cleanup.yml": "ansible"
  },
  "yaml.schemas": {
    "Kubernetes": [
      "**/cluster/**/*.yaml",
      "**/flux/**/*.yaml",
    ]
  },
  "sops.configPath": "./etc/.sops.yaml",
}
